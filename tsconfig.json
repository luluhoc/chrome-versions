{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "lib": ["ES2019", "DOM", "DOM.Iterable"],
    "noImplicitAny": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": ["scripts/**/*.ts", "packages/**/*.ts"],
  "exclude": ["node_modules", "assets", "downloads"]
}
